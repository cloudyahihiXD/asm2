            }

                li a:hover {
                    background-color: #111;
                }
    </style>
</head>
<body>
    <div>
         <ul class="nav navbar-nav">
             <li>@Html.ActionLink("FPT", "Home", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
